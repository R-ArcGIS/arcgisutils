Package: arcgisutils
Title: ArcGIS Utility Functions
Version: 0.1.1.9001
Authors@R: c(
    person("Josiah", "Parry", , "josiah.parry@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0001-9910-865X")),
